# ==========================================
# Development Settings
# ==========================================

# Core Application
NODE_ENV=development
VITE_APP_NAME=BlockCast

# Debug & Testing
VITE_DEBUG=true
VITE_ENABLE_MOCK_DATA=false

# ==========================================
# Market Resolution Configuration
# ==========================================

# Final Resolution Executor Mode
# true = DRY-RUN mode (logs actions without executing blockchain transactions)
# false = LIVE mode (executes actual blockchain transactions)
# IMPORTANT: Start with DRY-RUN mode first to test!
FINAL_RESOLUTION_DRY_RUN=true

# Monitor Service Port
MONITOR_PORT=3002
